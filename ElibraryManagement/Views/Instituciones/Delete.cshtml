@model ElibraryManagement.Models.Institucione
@{
    ViewData["Title"] = "Editar Institución";
}

<div class="container mt-4">
    <h2>✏️ Editar Institución</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdInstitucion" />
        <div class="form-group mb-3">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Dirección</label>
            <input asp-for="Direccion" class="form-control" />
        </div>
    </form>
    <form asp-action="Delete" method="post" asp-route-id="@Model.IdInstitucion" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta institución?');">
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
</div>





@{
    ViewData["VolverUrl"] = Url.Action("Index", "Instituciones");
}
@await Html.PartialAsync("_BotonVolver")