
@{
    ViewData["Title"] = "Log In";
}

<!--Estilo del log in-->

<style>
    .login-container {
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        transition: all 0.3s ease-in-out;
    }

        .login-container:hover {
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            transform: scale(1.01);
        }

    .form-control:focus {
        border-color: #6c63ff;
        box-shadow: 0 0 0 0.2rem rgba(108, 99, 255, 0.25);
    }

    .btn-login {
        background-color: #6c63ff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-login:hover {
            background-color: #574ee0;
        }

    .login-title {
        font-weight: 700;
        color: #333;
    }

    .login-subtext {
        font-size: 0.9rem;
        color: #888;
    }
</style>

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="login-container w-100" style="max-width: 400px;">
        <h3 class="text-center login-title mb-3">Bienvenido a <span class="text-primary">Booker</span></h3>
        <p class="text-center login-subtext mb-4">Inicia sesión para continuar</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>
        }

        <form method="post" asp-controller="LogInController1" asp-action="Login">
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="correoElectronico" name="correoElectronico" placeholder="ejemplo@correo.com" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="********" required>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Recordarme</label>
            </div>

            <button type="submit" class="btn btn-login w-100 text-white">Iniciar Sesión</button>
        </form>


        <div class="text-center mt-3">
            <small>¿Olvidaste tu contraseña? <a href="@Url.Action("Index", "")" class="text-decoration-none">Recuperar Contraseña</a></small>
        </div>
        <div class="text-center mt-3">
            <small>¿No tienes una cuenta? <a href="@Url.Action("Index", "SignUp")" class="text-decoration-none">Regístrate aquí</a></small>
        </div>
    </div>
</div>


