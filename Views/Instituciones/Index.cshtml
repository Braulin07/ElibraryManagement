@model List<ElibraryManagement.Models.Institucione>
@{
    ViewData["Title"] = "Ver Instituciones";
}

<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

<div class="container mt-4">
    <h2>🏫 Instituciones</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Crear Nueva Institución</a>
    </div>

    <table id="tablaInstituciones" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inst in Model)
            {
                <tr>
                    <td>@inst.Nombre</td>
                    <td>@inst.Direccion</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@inst.IdInstitucion" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@inst.IdInstitucion" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#tablaInstituciones').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
            }
        });
    });
</script>


