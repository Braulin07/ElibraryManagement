@model ElibraryManagement.Models.Libro
@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2>Eliminar Libro</h2>

<div class="alert alert-warning">
    ¿Estás seguro de que deseas eliminar el libro "<strong>@Model.Titulo</strong>"?
</div>

<div class="form-group">
    <label for="Autor">Autor: @Model.Autor</label>
</div>

<div class="form-group">
    <label for="Categoria">Categoría: @Model.Categoria</label>
</div>

<div class="form-group">
    <label for="Institucion">Institución: @Model.IdInstitucionNavigation?.Nombre</label>
</div>

@if (!string.IsNullOrEmpty(Model.Portada))
{
    <div class="form-group">
        <label>Portada:</label>
        <img src="~/portadas/@Model.Portada" alt="Portada" style="max-width: 150px;" />
    </div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdLibro" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>

@{
    ViewData["VolverUrl"] = Url.Action("Index", "LibrosAdmin");
}
@await Html.PartialAsync("_BotonVolver")
